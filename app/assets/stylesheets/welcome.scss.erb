$blue-0: #5992C2;      // Main Primary color */
$blue-1: #B2D3EF;
$blue-2: #80B1DA;
$blue-3: #3A75A7;
$blue-4: #206196;

$yellow-0: #FFDB6B;  // Main Secondary color (1) */
$yellow-1: #FFEEBA;
$yellow-2: #FFE38F;
$yellow-3: #FFD34C;
$yellow-4: #E9B925;

$red-0: #FF976B;  // Main Secondary color (2) */
$red-1: #FFCEBA;
$red-2: #FFB08F;
$red-3: #FF814C;
$red-4: #E95F25;

$container-bg: white;
$container-fg: black;

$hero-bg: $blue-3;
$hero-fg: white;

$nav-bg: $blue-3;
$nav-fg: white;

$nav-item-bg: $blue-3;
$nav-item-fg: $blue-1;

$section-bg: $blue-2;
$section-fg: $blue-4;

$portfolio-bg: $blue-3;
$portfolio-fg: white;

$contact-bg: $yellow-1;
$contact-fg: $yellow-4;

$issues-bg: $red-1;
$issues-fg: $red-4;

$item-bg: $blue-3;
$item-fg: white;

$play-bg: $yellow-1;
$play-fg: $yellow-4;

.container {
  background-color: $container-bg;
  color: $container-fg;
  margin: 0 auto;
}

.hero {
  background-color: $hero-bg;
  color: $hero-fg;
  color: white;
}

.hero h1 {
  text-align: center;
  margin: 0px;
  font-size: 48pt;
  padding: 12px;
}

.section {
  text-align: left;
  background-color: $section-bg;
  color: $section-fg;
  padding: 28px;
}

.section h2 { font-size: 36pt; }
.section h3 { font-size: 26pt; }
.section p { font-size: 18pt; }

.section-content {
  background-color: rgba(255,255,255,0.45);
  border-radius: 3px;
  padding: 24px;
}

.nav {
  background-color: $nav-bg;
  color: $nav-fg;
  padding: 2px;
  text-align: center;
}

.nav a {
  margin: 10px;
  background-color: $nav-item-bg;
  color: $nav-item-fg;
  font-size: 16pt;
}

.portfolio {
  background-color: $portfolio-bg;
  color: $portfolio-fg;
  padding: 0px;
  padding-top: 2px;
}

.portfolio h2 {
  padding-left: 60px;
}

.portfolio-item {
  padding: 100px;
  margin-left: 0px;
  margin-right: 0px;
  background-color: $item-bg;
  color: $item-fg;
}

.portfolio-item a.play {
  padding: 20px;
  border-radius: 10px;
  background-color: $play-bg;
  color: $play-fg;
  font-size: 20pt;
  text-decoration: none;
  font-weight: bold;
}

#busyverse {
  background:
    linear-gradient(90deg, $item-bg, rgba(250,250,250,0.48)),
    url(<%= asset_path 'busyverse.png' %>) no-repeat;
}

#dragon {
  background:
    linear-gradient(90deg, $item-bg, rgba(250,250,250,0.48)),
    url(<%= asset_path 'dragon.png' %>) no-repeat;
}

.contact {
  background-color: $contact-bg;
  color: $contact-fg;
}

.issues {
  background-color: $issues-bg;
  color: $issues-fg;
}

.footer {
  clear: both;
}
