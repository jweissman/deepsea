$cerulean-0: #306D84;      // Main Primary color */
$cerulean-1: #7CABBD;
$cerulean-2: #4C849A;
$cerulean-3: #1C5A71;
$cerulean-4: #0B445A;

$blue-0: #3D4A90;  // Main Secondary color (1) */
$blue-1: #8892C7;
$blue-2: #5A66A7;
$blue-3: #27347C;
$blue-4: #142062;

$yellow-0: #D3AB47;  // Main Secondary color (2) */
$yellow-1: #FFE4A3;
$yellow-2: #F5CF73;
$yellow-3: #B58C26;
$yellow-4: #8F6A0D;

$gold-0: #D39047;   // Main Complement color */
$gold-1: #FFD3A3;
$gold-2: #F5B773;
$gold-3: #B57126;
$gold-4: #8F510D;

$blue-0: #5992C2;      // Main Primary color */
$blue-1: #B2D3EF;
$blue-2: #80B1DA;
$blue-3: #3A75A7;
$blue-4: #206196;

$green-0: #339959;  // Main Secondary color (2) */
$green-1: #84CEA0;
$green-2: #54B277;
$green-3: #1C8342;
$green-4: #09682C;


$red-0: #FF976B;  // Main Secondary color (2) */
$red-1: #FFCEBA;
$red-2: #FFB08F;
$red-3: #FF814C;
$red-4: #E95F25;

$primary-bg: black;
$primary-fg: white;

$alternate-bg: $blue-4;
$alternate-fg: $blue-1;

$secondary-bg: $gold-1;
$secondary-fg: $gold-4;

$complement-bg: $green-4;
$complement-fg: $green-1;

$tertiary-bg: $red-4;
$tertiary-fg: $red-1;

$hero-bg: linear-gradient(rgba(250,250,250,0.08), $primary-bg),
  url(<%= asset_path 'busyverse-alt.png' %>) no-repeat;
$hero-fg: white;

$nav-bg: $cerulean-4;
$nav-fg: white;

$nav-item-bg: $nav-bg;
$nav-item-fg: $primary-fg;

$welcome-bg: $primary-bg;
$welcome-fg: $cerulean-1;

$portfolio-bg: $primary-bg;
$portfolio-fg: $secondary-fg;

$contact-bg: $secondary-bg;
$contact-fg: $secondary-fg;

$issues-bg: $tertiary-bg;
$issues-fg: $tertiary-fg;

$item-bg: $primary-bg;
$item-fg: white;

$play-bg: $primary-bg;
$play-fg: $primary-fg;

$translucent: rgba(200,200,200,0.25);

.container {
  margin: 0 auto;
}

.hero {
  background: $hero-bg;
  color: $hero-fg;
  max-height: 480px;
}

.hero h1 {
  text-align: center;
  margin: 0px;
  font-size: 60pt;
}

.hero h2 {
  text-align: center;
}

.section {
  text-align: left;
  padding: 48px;
}

.section h2 { font-size: 32pt; }
.section h3 { font-size: 24pt; }
.section p { font-size: 16pt; }

.section-content {
  background-color: $translucent;
  padding: 48px;
  margin-bottom: 20px;
}

.nav {
  float: top;
  background-color: none;
  color: $nav-fg;
  text-align: center;
  padding: 2px;
  margin: 0px;
}

.nav :after { clear: both; }

.nav a {
  text-decoration: none;
  text-transform: uppercase;
  color: $nav-item-fg;
  font-weight: bold;
}

.portfolio {
  background-color: $portfolio-bg;
  color: $portfolio-fg;
  padding: 0px;
  padding-top: 2px;
}

.portfolio h2 {
  padding-left: 60px;
}

.portfolio-item {
  padding: 100px;
  margin-left: 0px;
  margin-right: 0px;
  background-color: $item-bg;
  color: $item-fg;
  max-height: 420px;
  min-width: 700px;
}

.portfolio-item a.play {
  text-transform: uppercase;
  padding: 20px;
  border-radius: 10px;
  background-color: $play-bg;
  color: $play-fg;
  font-size: 16pt;
  text-decoration: none;
  font-weight: bold;
}

.portfolio-item h3 small {
  font-size: 12pt;
  font-style: italic;
}

#busyverse a.play:hover { 
  background-color: $blue-3; 
}

#dragon a.play:hover { 
  background-color: $green-3; 
}

#busyverse {
  background:
    linear-gradient(90deg, $alternate-bg, rgba(250,250,250,0.48)),
    url(<%= asset_path 'busyverse.png' %>) no-repeat;
}

#dragon {
  background:
    linear-gradient(90deg, $complement-bg, rgba(250,250,250,0.48)),
    url(<%= asset_path 'dragon.png' %>) no-repeat;
}

.contact {
  background-color: $contact-bg;
  color: $contact-fg;
}

.issues {
  background-color: $issues-bg;
  color: $issues-fg;
}

.welcome {
  background-color: $welcome-bg;
  color: $welcome-fg;
  font-size: 14pt;
  padding-left: 10%;
  padding-right: 10%;
}

.footer {
  clear: both;
}
